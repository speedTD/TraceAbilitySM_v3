
@{
    ViewBag.Title = "EditMonth";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <!-- Display grid, CRUD button -->
    <div class="row" style="overflow-x: scroll;">
        <h2>Update machine maintenance monthly</h2>
        <div class="col-xs-12">
            <form>
                <div class="form-group row">
                    <label for="OperatorName" class="col-md-3 col-form-label">Operator Name</label>
                    <label for="Frequency" class="col-md-3 col-form-label">Frequency</label>
                    <label for="MaintenanceDate" class="col-md-3 col-form-label">Maintenance Date</label>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <input type="text" class="form-control" disabled id="OperatorName" placeholder="OperatorName">
                    </div>
                    <div class="col-md-3">
                        <select name="dropdown" id="Frequency" class="form-control">
                            <option value="1">Bảo dưỡng hàng ngày</option>
                            <option value="2">Bảo dưỡng hàng tuần</option>
                            <option value="3" selected>Bảo dưỡng hàng tháng</option>
                            <option value="4">Bảo dưỡng 3 tháng</option>
                            <option value="5">Bảo dưỡng 6 tháng</option>
                            <option value="6">Bảo dưỡng hàng năm</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <input class="datepicker form-control" id="MaintenanceDate" data-date-format="mm/dd/yyyy" data-provide="datepicker">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Line" class="col-md-3 col-form-label">Line</label>
                    <label for="Machine" class="col-md-3 col-form-label">Machine</label>
                    <label for="Machine" class="col-md-1 col-form-label">Month</label>
                    <label for="Machine" class="col-md-1 col-form-label">Year</label>
                    <label for="Machine" class="col-md-1 col-form-label">Result</label>
                    <label for="Machine" class="col-md-1 col-form-label">CheckerID</label>
                    <label for="Machine" class="col-md-1 col-form-label">CheckerResult</label>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        <select name="dropdown" disabled id="Line" class="form-control"></select>
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" id="Machine" placeholder="Machine">
                    </div>                   
                    <div class="col-md-1">
                        <input type="text" class="form-control" id="Month" placeholder="Week">
                    </div>
                    <div class="col-md-1">
                        <input type="text" class="form-control" id="Year" placeholder="Year">
                    </div>
                    <div class="col-md-1">
                        <input type="text" class="form-control" id="Result" placeholder="Result">
                    </div>
                    <div class="col-md-1">
                        <input type="text" class="form-control" id="CheckerID" placeholder="CheckerID">
                    </div>
                    <div class="col-md-1">
                        <input type="text" class="form-control" id="CheckerResult" placeholder="CheckerResult">
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Update Checker</button><br /><br />
                    </div>
                    @*<div class="col-md-1">
                        <button type="button" class="btn btn-primary" id="btnSearch" onclick="return SearchMtnContentList();">Search </button>
                    </div>*@
                </div>
            </form>
            <h5 style="text-align: center">TABLE EQUIPMENT MAINTENANCE CHECK</h5>
            <div class="row" style="overflow-x: scroll;">
                <div class="col-xs-12">
                    <table id="tblMachineMtnContentList" class="table table-bordered table-hover">
                        <thead>
                            <tr class="bg-light-blue color-palette text-center">
                                <th style="display:none">
                                    ID
                                </th>
                                <th>
                                    MachineMtnContentID
                                </th>
                                <th>
                                    Machine Part
                                </th>
                                <th>
                                    Content Maintenance
                                </th>
                                <th>
                                    Tool Maintenance
                                </th>
                                <th>
                                    Method Maintenance
                                </th>
                                <th>
                                    Result
                                </th>
                            </tr>

                        </thead>
                        <tbody class="tbody"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="btnAdd" onclick="return InsertMachineMtnMonthly();">Save</button>
        <a href="/MachineMtnDaily/IndexMonth" class="btn btn-primary">Close</a>
    </div>
    <div class="form-group" style="vertical-align: middle;">
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content" style="width:50%">
                    <form>
                        <div class="modal-header">
                            <label for="CheckLogin" class="col-md-3 col-form-label"> Check Login</label>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-3 form-group">
                                        <label>User Name:</label>
                                    </div>
                                    <div class="col-md-9 form-group">
                                        <input type="text" name="UserName" id="UserName" class="form-control" placeholder="UserName">
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <label>PassWord:</label>
                                    </div>
                                    <div class="col-md-9">
                                        <input type="password" name="Password" id="Password" class="form-control" placeholder="Password">
                                    </div>
                                </div>
                            </div>                            
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" onclick="return Check();">Login</button>                     
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>                            
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
    
</section>

@*<script src="~/Scripts/jquery-3.0.0.min.js"></script>*@
<script src="~/Scripts/Common/SM_Common.js"></script>
<script src="~/Scripts/MachineMtnDaily/MachineMtnMonthlyEdit.js?v=@DateTime.Now.ToString("yyMMddHHssmm")"></script>





