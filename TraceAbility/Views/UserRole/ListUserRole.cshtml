@{
    ViewBag.Title = "Index";
}
<section class="content">
    <div class="row">
        <div class="col-lg-6 col-sm-6 col-xs-12" style="float:none; margin:0 auto;">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Phân quyền User/User Role.</h3>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <label for="Factory">Factory</label>
                        <select name="dropdown" id="Factory" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label for="UserName">User</label>
                        <select name="dropdown" id="UserName" class="form-control"></select>
                    </div>
                    <!--table -->
                    <div class="table-responsive no-padding">
                        <table id="RoleTable" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        ID
                                    </th>
                                    <th>
                                        Choose
                                    </th>
                                    <th>
                                        RoleName
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    @*<th>
                                            Action
                                        </th>*@
                                </tr>
                            </thead>
                            <tbody class="tbody"></tbody>
                        </table>
                    </div>
                    
                </div>
                <div class="box-footer">
                    <button type="button" class="btn btn-primary" id="btnSave" onclick="return SaveUserWithRoles();">Save</button>
                    <a href="/MachineMtnMonthYear/MachineMtnMonthYearList" class="btn btn-danger">Close</a>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/Common/SM_Common.js"></script>
<script src="~/Scripts/User/UserRole.js?v=@DateTime.Now.ToString("yyMMddHHssmm")"></script>

