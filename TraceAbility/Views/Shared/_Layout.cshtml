<script>
        // Remove active for all items.
        $('.page-sidebar-menu li').removeClass('active');
        $('.page-sidebar-menu li').removeClass('menu-open');
        //// highlight submenu item
        $('li a[href="' + this.location.pathname + '"]').parent().addClass('active');
        // Highlight parent menu item.
        $('ul a[href="' + this.location.pathname + '"]').parents('li').addClass('treeview menu-open');
        $('li a[href="' + this.location.pathname + '"]').parents('ul').css("display", "block");
</script>


