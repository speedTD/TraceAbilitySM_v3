    @foreach (var parentMenu in Model.returnMenuRole.lstMenuRole.Where(e => e.ParentMenuID == 0)) //list parent menu.
    {
        <li class="treeview" style="white-space : normal">
            <a href="#">
                @if (@parentMenu.DisplayName.ToLower().Contains("admin"))
                {
                    <i class='fa fa-group'></i>
                }
                else if (@parentMenu.DisplayName.ToLower().Contains("tool jig"))
