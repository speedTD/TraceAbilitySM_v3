                }
                else if (@parentMenu.DisplayName.ToLower().Contains("machine maintenance"))
                {
                    <i class='fa fa-cogs'></i>
                }
                else
                {
                    <i class='fa fa-dashboard'></i>
                }
                <span>@(new HtmlString(@parentMenu.DisplayName.Replace("<br/>", "<br/><i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</i>")))</span>
                <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
            <ul class="treeview-menu" style="white-space : normal">
                @foreach (var childMenu in Model.returnMenuRole.lstMenuRole.Where(e => e.ParentMenuID == parentMenu.ID)) //list childs of a parent..
                {
                    <li><a href="@childMenu.UrlLink"><i class="fa fa-circle-o"></i> @(new HtmlString(@childMenu.DisplayName.Replace("<br/>", "<br/><i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</i>"))) </a></li>
                }
            </ul>

