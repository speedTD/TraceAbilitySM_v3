
@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <!-- Display grid, CRUD button -->
    <div class="row" style="overflow-x: scroll;">
        <div class="col-xs-12">
            <h2>FPBCheckingItem</h2>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add New FPBCheckingItem</button><br /><br />
            <table class="table table-bordered table-hover">
                <thead>
                    <tr class="bg-light-blue color-palette text-center">
                        @*<th>
                            IDFPBCheckingItem
                        </th>*@
                        <th>
                            MachineID
                        </th>
                        @*<th>
                            CheckingItemName
                        </th>*@
                        <th>
                            FrequencyID
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody class="tbody"></tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 text-center" id="page-selection">
        </div>
    </div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" style="width : 66%">
                <div class="modal-header">
                    @*<button type="button" class="close" data-dismiss="modal"></button>*@
                    <h4 class="modal-title" id="myModalLabel">Add New FPBCheckingItem</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="MachineID" class="col-md-4 control-label">MachineID</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" id="MachineID" placeholder="MachineID">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="Frequency" class="col-md-4 control-label">Frequency</label>
                                <div class="col-md-8">
                                    <select name="dropdown" id="FrequencyID" class="form-control">
                                        <option value="1" selected>First</option>
                                        <option value="2">Middle</option>
                                        <option value="3">End</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div id="POItablediv">
                            <input type="button" class="btn btn-primary " id="btnAddRow" value="Add" onclick="insRow()" /><br /><br />
                            <table id="TableDPBChekingItem">
                                <thead>
                                    <tr class="bg-light-blue color-palette text-center">
                                        <th>STT</th>
                                        <th style="display:none">IDCheckingItemName</th>
                                        <th>CheckingItemName</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody class="tbodyFPB">
                                    <tr>
                                        <td>1</td>
                                        <td style="display:none"><input type="text" id="IDCheckingItemName" /></td>
                                        <td><input type="text" id="checkingItemName" /></td>
                                        <td>
                                            <input type="button" id="btnDelRow" value="Delete" onclick="deleteRow(this)" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <script>
                            function deleteRow(row) {
                                var i = row.parentNode.parentNode.rowIndex;
                                document.getElementById('TableDPBChekingItem').deleteRow(i);
                            }
                        </script>
                        <script>
                            function insRow() {
                                var x = document.getElementById('TableDPBChekingItem');
                                var new_row = x.rows[1].cloneNode(true);
                                var len = x.rows.length;
                                new_row.cells[0].innerHTML = len;

                                var IDCheckingItemName = new_row.cells[1].getElementsByTagName('input')[0];
                                IDCheckingItemName.id += len;
                                IDCheckingItemName.value = '';

                                var CheckingItemName = new_row.cells[2].getElementsByTagName('input')[0];
                                CheckingItemName.id += len;
                                CheckingItemName.value = '';

                                x.appendChild(new_row);
                            }
                        </script>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnInsert" onclick="return InsertFPBCheckingItem();">Save</button>
                    <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="UpdateFPBCheckingItem();">Update</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
            </div>
    </div>
</section>

@*<script src="~/Scripts/jquery-3.0.0.min.js"></script>*@
<script src="~/Scripts/Common/SM_Common.js"></script>
