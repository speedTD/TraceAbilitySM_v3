
@{
    ViewBag.Title = "Index";
}
<section class="content">
    <!-- Display grid, CRUD button -->
    <div class="row" style="overflow-x: scroll;">
        <div class="col-xs-12">
            <form>
                <div class="form-group row">
                    <label for="Operator" class="col-md-3 col-form-label">Operator</label>
                    <label for="OperatorName" class="col-md-3 col-form-label">Operator Name</label>
                    <label for="Frequency" class="col-md-3 col-form-label">Frequency</label>

                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        <input type="text" class="form-control" id="Operator" placeholder="Operator">
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" id="OperatorName" placeholder="OperatorName">
                    </div>
                    <div class="col-md-3">
                        <select name="dropdown" id="Frequency" class="form-control">
                            <option value="1">Bảo dưỡng hàng ngày</option>
                            <option value="2">Bảo dưỡng hàng tuần</option>
                            <option value="3" selected>Bảo dưỡng hàng tháng</option>
                            <option value="4">Bảo dưỡng 3 tháng</option>
                            <option value="5">Bảo dưỡng 6 tháng</option>
                            <option value="6">Bảo dưỡng hàng năm</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Line" class="col-md-3 col-form-label">Line</label>
                    <label for="Machine" class="col-md-3 col-form-label">Machine</label>
                    <label for="MaintenanceDate" class="col-md-3 col-form-label">Maintenance Date</label>
                    <label for="Month" class="col-md-1 col-form-label">Month</label>
                    <label for="Year" class="col-md-1 col-form-label">Year</label>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        <select name="dropdown" id="Line" class="form-control"></select>                      
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" id="Machine" placeholder="Machine">
                    </div>
                    <div class="col-md-3">
                        <input class="datepicker form-control" id="MaintenanceDate" data-date-format="mm/dd/yyyy" data-provide="datepicker">
                    </div>
                    <div class="col-md-1">
                        <input type="text" class="form-control" id="Month" placeholder="Month">
                    </div>
                    <div class="col-md-1">
                        <input type="text" class="form-control" id="Year" placeholder="Year">
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-primary" id="btnAdd" onclick="return AddMachineMtnDaily();">Add new </button>
                    </div>
                </div>
            </form>
            <h3 style="text-align: center">TABLE EQUIPMENT MAINTENANCE CHECK</h3>
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            Machine Part
                        </th>
                        <th>
                            Content Maintenance
                        </th>
                        <th>
                            Tool Maintenance
                        </th>
                        <th>
                            Method Maintenance
                        </th>
                        <th>
                            Method Check
                        </th>
                        <th>
                            Result
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>

                </thead>
                <tbody class="tbody"></tbody>
            </table>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="btnAdd" onclick="return InsertMachineMtnDaily();">Save</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    </div>
</section>

@*<script src="~/Scripts/jquery-3.0.0.min.js"></script>*@
<script src="~/Scripts/Common/SM_Common.js"></script>
<script src="~/Scripts/MachineMtnDaily/MachineMtnMonthly.js?v=@DateTime.Now.ToString("yyMMddHHssmm")"></script>

