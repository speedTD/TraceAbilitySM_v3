
@{
    ViewBag.Title = "ListAllMenuWithRolePermission";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="row">
        <div class="col-lg-8 col-sm-12 col-xs-12" style="float:none; margin:0 auto;">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Phân quyền/ Role Menu Permission</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-4 col-sm-4 col-xs-12">
                            <div class="form-group">
                                <label for="Role">Role</label>
                                <select name="dropdown" id="Role" class="form-control"></select>
                            </div>
                        </div>
                    </div>
                    <!--table -->
                    <div class="row">
                        <div class="col-lg-12 col-sm-12 col-xs-12">
                            <div class="table-responsive no-padding">
                                <table id="RoleTable" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th style="display:none;">
                                                ID
                                            </th>
                                            <th>
                                                Menu Name
                                            </th>
                                            <th>
                                                <input type='checkbox' class="checkAll" onchange="toggleCheckAll(this, 'myCheckBoxView')"> View
                                            </th>
                                            <th>
                                                <input type='checkbox' class="checkAll" onchange="toggleCheckAll(this, 'myCheckBoxAdd')"> Add
                                            </th>
                                            <th>
                                                <input type='checkbox' class="checkAll" onchange="toggleCheckAll(this, 'myCheckBoxEdit')"> Edit
                                            </th>
                                            <th>
                                                <input type='checkbox' class="checkAll" onchange="toggleCheckAll(this, 'myCheckBoxDelete')"> Delete
                                            </th>
                                            <th>
                                                <input type='checkbox' class="checkAll" onchange="toggleCheckAll(this, 'myCheckBoxCheck')"> Check
                                            </th>
                                            @*<th>
                                                    Action
                                                </th>*@
                                        </tr>
                                    </thead>
                                    <tbody class="tbody"></tbody>
                                    
                                </table>
                               
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="button" class="btn btn-primary" id="btnSave" onclick="return SaveRoleWithPermissionMenus();">Save</button>
                    <a href="/MachineMtnMonthYear/MachineMtnMonthYearList" class="btn btn-danger">Close</a>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/Common/SM_Common.js"></script>
<script src="~/Scripts/Menu/ListAllMenuWithRolePermission.js?v=@DateTime.Now.ToString("yyMMddHHssmm")"></script>



