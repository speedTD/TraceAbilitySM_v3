@{
    ViewBag.Title = "ProductionControlList";
}
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Bảng kiểm tra điều kiện sản xuất/Production Control Checksheet</h3>
            <div class="box-tools pull-right">
                <a class="btn btn-primary" href="~/ProductionCondition/Add">
                    <i class="fa fa-plus"></i>
                    <span>Add New</span>
                </a>
            </div>
        </div>
        <div class="box-body">
            <div class="row myRow-bordered">
                <div class="col-xs-6 col-sm-3 col-lg-2">
                    <label for="MachineIDSearch">MachineID</label>
                    <input type="text" class="form-control" id="MachineIDSearch" placeholder="MachineIDSearch">
                </div>
                <div class="col-xs-6 col-sm-3 col-lg-2">
                    <label for="IndicationIDSearch">IndicationID</label>
                    <input type="text" class="form-control" id="IndicationIDSearch" placeholder="IndicationIDSearch">
                </div>
                <div class="col-xs-6 col-sm-3 col-lg-2">
                    @*<label for="ResultSearch">Result</label>*@
                    @*<input type="text" class="form-control" id="ResultSearch" placeholder="ResultSearch">*@
                    <div class="form-group">
                        <label for="ResultSearch">Total Result</label>
                        <div class="form-check form-check-inline">
                            <label class="radio-inline"><input type="radio" name="rdo_ResultSearch" value="OK">OK</label>
                            <label class="radio-inline"><input type="radio" name="rdo_ResultSearch" value="NG">NG</label>
                            <label class="radio-inline"><input type="radio" name="rdo_ResultSearch" value="" checked>All</label>
                        </div>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-3 col-lg-2">
                    <div class="form-group">
                        <label for="FromDate">From Date</label>
                        <input class="datepicker form-control" id="FromDate" data-date-format="mm/dd/yyyy" data-provide="datepicker">
                    </div>
                </div>
                <div class="col-xs-6 col-sm-3 col-lg-2">
                    <div class="form-group">
                        <label for="ToDate">To Date</label>
                        <input class="datepicker form-control" id="ToDate" data-date-format="mm/dd/yyyy" data-provide="datepicker">
                    </div>
                </div>
                <div class="hidden-sm hidden-xs visible-lg col-lg-2">
                    <div class="form-group">
                        <label for="">&nbsp;</label>
                        <input type="text" class="form-control" style="visibility:hidden;">
                    </div>
                </div>
                <div class="col-xs-6 col-sm-3 col-lg-2">
                    <div class="form-group">
                        <label for="btnSearch" class="col-xs-6 col-sm-3 hidden-lg">&nbsp;</label>
                        <button type="button" class="btn btn-primary form-control" id="btnSearch" onclick="return PdtCtrlChecksheet_Search();">Search</button>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-3 col-lg-2">
                    <div class="form-group">
                        <label for="btnSearch" class="col-xs-6 col-sm-3 hidden-lg">&nbsp;</label>
                        <button type="button" class="btn btn-primary form-control" id="btnClearSearchItem" onclick="return ClearSearchItem();">Clear Search</button>
                    </div>
                </div>
            </div>
            <!--table -->
            <div class="row">
                <div class="col-lg-12 col-sm-12 col-xs-12">
                    @*<div class="table-responsive no-padding">*@
                        <table id="PdtCtrlCheckSheet_DataTable" class="table table-striped table-bordered table-hover text-nowrap" style="width:100%">
                            <thead>
                                <tr class="bg-light-blue color-palette text-center">
                                    @*<th style="display:none">
                                        ID
                                    </th>*@
                                    
                                    <th>
                                        Machine ID
                                    </th>
                                    <th>
                                        DateTime
                                    </th>
                                    <th>
                                        Indication
                                    </th>
                                    <th>
                                        Operator 
                                    </th>
                                    <th>
                                        ItemName
                                    </th>
                                    <th>
                                        ItemCode
                                    </th>
                                    <th>
                                        BatchNo
                                    </th>
                                    <th>
                                        SeqNo
                                    </th>
                                    <th>
                                        Result
                                    </th>
                                    <th>
                                        Program Name
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="tbody"></tbody>
                        </table>
                    @*</div>*@
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/Common/SM_Common.js"></script>
<script src="~/Scripts/ProductionCondition/ProductionCondition.js?v=@DateTime.Now.ToString("yyMMddHHssmm")"></script>
