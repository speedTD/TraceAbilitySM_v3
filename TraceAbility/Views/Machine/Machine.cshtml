@{
    ViewBag.Title = "Machine";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    @*<link href="~/Content/DataTables/datatables.min.css" rel="stylesheet" />*@
    <!-- Display grid, CRUD button -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Danh sách máy/List Machine</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">
                    <i class="fa fa-plus"></i>
                    <span>Add New</span>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-lg-12 col-sm-12 col-xs-12">
                    <div class=""> 
                        <table class="table table-striped table-bordered table-hover text-nowrap dataTable myTable"  style="width:100%;">
                            <thead>
                                <tr class="bg-light-blue color-palette text-center">
                                    <th>
                                        Factory
                                    </th>
                                    <th>
                                        Line
                                    </th>
                                    <th>
                                        MachineID
                                    </th>
                                    <th>
                                        MachineName
                                    </th>
                                    <th>
                                        MachineType
                                    </th>
                                    <th>
                                        MachineNumber
                                    </th>
                                    <th>
                                        Section
                                    </th>
                                    <th>
                                        ReceiveDate
                                    </th>
                                    <th>
                                        Maker
                                    </th>
                                    <th>
                                        SerialNumber
                                    </th>                                  
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="tbody"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"></button>
                <h4 class="modal-title" id="myModalLabel">Add new Machine</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group row">
                                <label for="MachineID" class="col-sm-3 col-form-label">Machine Id</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="MachineID" placeholder="MachineId">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="MachineName" class="col-sm-3 col-form-label">Machine Name</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="MachineName" placeholder="MachineName">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="MachineNumber" class="col-sm-3 col-form-label">Machine Number</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="MachineNumber" placeholder="MachineNumber">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="Factory" class="col-sm-3 col-form-label">Factory</label>
                                <div class="col-sm-9">
                                    <div class="form-group">
                                        @*<label for="Area">Factory</label>*@
                                        <select name="dropdown" id="Area" class="form-control"></select>
                                    </div>
                                    @*<input type="text" class="form-control" id="Area" placeholder="Area">*@
                                </div>                             
                            </div>
                            <div class="form-group row">
                                <label for="Section" class="col-sm-3 col-form-label">Section</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="Section" placeholder="Section">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="ReceiveDate" class="col-sm-3 col-form-label">ReceiveDate</label>
                                <div class="col-sm-9">
                                    <input class="datepicker form-control" id="ReceiveDate" data-date-format="mm/dd/yyyy" data-provide="datepicker">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="Maker" class="col-sm-3 col-form-label">Maker</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="Maker" placeholder="Maker">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="SerialNumber" class="col-sm-3 col-form-label">SerialNumber</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="SerialNumber" placeholder="SerialNumber">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="LineID" class="col-sm-3 col-form-label">Line</label>
                                <div class="col-sm-9">
                                    <select class="form-control" id="LineID"></select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="MachineType" class="col-sm-3 col-form-label">MachineType</label>
                                <div class="col-sm-9">
                                    <select class="form-control" id="MachineType"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return InsertMachine();">Save</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="UpdateMachine();">Update</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Common/SM_Common.js"></script>
@*<script src="~/Content/DataTables/datatables.min.js"></script>*@
<script src="~/Scripts/MachineList/MachineList.js?v=@DateTime.Now.ToString("yyMMddHHssmm")"></script>


